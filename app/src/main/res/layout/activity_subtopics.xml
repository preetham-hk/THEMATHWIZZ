<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subTopic_TextView_CardHolder"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/lightPurple">

        <TextView
            android:id="@+id/subTopic_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/browser_actions_text_color"
            android:gravity="center|center_horizontal"
            android:textSize="20sp"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTopic_TextView_CardHolder"
        android:layout_marginTop="20dp">

        <ListView
            android:id="@+id/subtopic_ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTopic_textView"
            android:layout_marginTop="10dp"
            android:gravity="center|center_horizontal">
        </ListView>

    </android.support.v7.widget.CardView>


</RelativeLayout>