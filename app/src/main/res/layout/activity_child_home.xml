<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <technolifestyle.com.imageslider.FlipperLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/child_Home_flipper_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/child_Home_flipper_layout"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/ChildHome_activities_Button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:paddingTop="20dp"
                android:text="Your Recent Activities" />

            <TextView
                android:layout_below="@+id/ChildHome_activities_Button"
                android:id="@+id/child_class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="class"
                android:textColor="#f111"
                android:textSize="21sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/child_card_holder1"
                style="@style/Card"
                android:layout_below="@+id/child_class_name"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/Child_Home_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
